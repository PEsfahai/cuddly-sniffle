# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/pantri?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (for image storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2
AWS_S3_BUCKET=pantri-images

# OpenAI (for recipe generation)
OPENAI_API_KEY=your-openai-api-key

# Google Cloud Vision (for OCR fallback)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_VISION_KEY=

# Apple Push Notification Service (APNs)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=./certs/apns-key.p8
APNS_PRODUCTION=false

# External APIs
OPENFOODFACTS_API_URL=https://world.openfoodfacts.org/api/v2

# Retailer APIs (if available)
TESCO_API_KEY=
SAINSBURYS_API_KEY=
ASDA_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:19006,exp://localhost:19000

# Sentry (Error Tracking)
SENTRY_DSN=
